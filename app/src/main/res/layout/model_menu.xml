<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    app:cardCornerRadius="3dp"
    tools:context="com.naufalcahyo.modul2.naufalcahyo_1202150366_modul2.MainMenu">

    //untuk main menu
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/background_material_light"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/marble"
        android:padding="3dp">

        <ImageView
            android:id="@+id/gbr"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/namaMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="160dp"
            android:gravity="center_vertical"
            android:text="Nama Menu"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="24sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/harga"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/namaMenu"
            android:layout_below="@+id/namaMenu"
            android:layout_marginTop="15dp"
            android:text="Description"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:layout_width="wrap_content" />


    </RelativeLayout>

</RelativeLayout>