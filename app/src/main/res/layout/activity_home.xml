<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context="com.naufalcahyo.modul2.naufalcahyo_1202150366_modul2.Home">


    //untuk home
    <ImageView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:src="@drawable/lawlesslogohorizontal" />

    <TextView
        android:id="@+id/pilihMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="Pilih Menu"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pilihMenu"
        android:layout_below="@+id/topbar"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbDineIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:buttonTint="@android:color/holo_orange_light"
            android:text="Dine In"
            android:textColor="@android:color/white" />


        <RadioButton
            android:id="@+id/rbTakeAway"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:buttonTint="@android:color/holo_orange_light"
            android:text="Take Away"
            android:textColor="@android:color/white" />


    </RadioGroup>

    <Button
        android:id="@+id/btnPilihMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="27dp"
        android:background="@android:color/holo_orange_light"
        android:text="Pilih Menu"
        android:onClick="pesanNow"/>


</RelativeLayout>
